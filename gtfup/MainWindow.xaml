<Window x:Class="gtfup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GTFUP" Height="240" Width="240" Icon="mznlab_16.ico"
        Closed="Window_Closed" WindowStartupLocation="CenterScreen"
        Topmost="True" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="timerLbl" Content="45" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="72" />
        <Button Content="Reset" HorizontalAlignment="Left" Margin="40,0,0,20" VerticalAlignment="Bottom" Width="60" Click="resetButton_Click" />
        <Button Content="-5 min" HorizontalAlignment="Right" Margin="0,0,40,20" VerticalAlignment="Bottom" Width="60" Click="minusFiveButton_Click" />
        <Button Content="?" HorizontalAlignment="Right" Margin="0,5,5,0" VerticalAlignment="Top" Width="25" Click="helpButton_Click" />
    </Grid>
</Window>
